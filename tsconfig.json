{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "paths": { "*": ["types/*"] },
        "strict": true,
        "rootDir": "ts",
        "outDir": "./public/js",
        "sourceMap": true,
        "declaration": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
